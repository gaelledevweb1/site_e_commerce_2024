				{% for adress in user.adress %}

					{# <tr>
																							<th>{{ field }}</th>
																							<td>{{ attribute(adress, field) }}</td>
																						</tr> #}
					<div
						class="card mb-3">
						<!-- mb-3 ajoute une marge en bas pour séparer les cartes -->
						<div class="card-header">
							Adresse
						</div>
						<div class="card-body">
							{% for field in adressFields %}
								<p class="card-text">
									<strong>{{ field|capitalize }}:</strong>
									{{ attribute(adress, field) }}</p>
							{% endfor %}
						</div>
					</div>
				{% endfor %}


			
			{% if app.user %}
				<a href="{{ path('app_adress_new') }}">Ajouter une adresse</a>
