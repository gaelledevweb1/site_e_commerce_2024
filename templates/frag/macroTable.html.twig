{% macro TableGeneric(fields, items) %}

    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {% for field in fields %}
            <th>{{ field }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
            {% for field in fields %}
                <td>{{ item[field] }}</td>
            {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endmacro %}