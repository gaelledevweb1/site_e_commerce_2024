{% extends 'base.html.twig' %}

{% block title %}movehealth
{% endblock %}


{# {% block body %} #}


{% block content %}


	<style>
		body main .sect1 .row .card{width:28rem}
		body main .sect1 .row .card img{height:16.5rem}
		body main .sect2 .card-group .card a{z-index:100
		}
		body main .sect2 .card-group .card a img{height:27.5rem}
		body main .sect2 .card-group .card1 .card-img-overlay .card-title,
		body main .sect2 .card-group .card3 .card-img-overlay .card-title{color:white
		}
		body main .sect3 .d-flex .card{max-width:1420px}
		body main .sect3 .d-flex .card .row .col-md-8 .card-body{margin-top:90px}
	</style>


	<header>


		<div id="carouselExample" class="carousel slide">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="https://picsum.photos/1920/324" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src="https://picsum.photos/1920/324" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src="https://picsum.photos/1920/324" class="d-block w-100" alt="...">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</header>

	<main>
		<section class="sect1 colCenter">
			<h1>Nos meilleurs ventes</h1>

			<div class="row row-cols-4 d-flex justify-content-center   ">


				{% for product in products %}
					<div class="card me-5  mb-5 mt-5">
						<img src="{{asset(product.articleThumbnails)}}" class="card-img-top img-fluid w-75 p-4 mx-auto" alt="image de {{ product.articleName }}">
						<div class="card-body">
							<h5 class="card-title">{{ product.articleName  }}</h5>
							<p class="card-text">{{ product.articleDescription  }}</p>

							<h6 class="card-subtitle mb-2 text-muted">{{ product.sellPriceHT  }}</h6>
							<a href="{{path('app_cart_add',{'id':product.id})}}" class="btn btn-Blue">ajouter au panier</a>
							<a href="{{path('app_paiement_index')}}" class="btn btn-primary">acheter maintenant</a>
						</div>
					</div>
				{% endfor %}
			</div>


			<a href="{{path('app_products_index')}}">
				<button type="button" class="btn btnProducts btn-rounded" data-mdb-ripple-init>voir tous nos produits</button>
				{# <button class="btn btnProducts" type="submit">voir tous nos produits</button> #}
			</a>

		</section>

		<section class="sect2">

			<div class="card-group">
				<div class="card card1">

					<a href="{{path('app_category_index')}}"><img src="{{asset('media/images/img/paysage/belly-1434852_1280 (1).jpg')}}" class="card-img-top " alt="femme enceinte"></a>

					<div class="card-img-overlay">
						<h5 class="card-title ">Maternité: découvrir</h5>

					</div>

				</div>
				<div class="card card2">
					<a href="{{path('app_products_index')}}">
						<img src="{{asset('media/images/img/paysage/pilates-1950971_1280.jpg')}}" class="card-img-top " alt="sport pour le dos"></a>

					<div class="card-img-overlay">

						<h5 class="card-title">sport pour le dos:découvrir
						</h5>

					</div>

				</div>
				<div class="card card3">
					<a href="{{path('app_products_index')}}">
						<img src="{{asset('media/images/img/paysage/nordic-walking-1814784_1280.jpg')}}" class="card-img-top " alt="senior"></a>
					<div class="card-img-overlay">
						<h5 class="card-title ">senior: découvrir</h5>

					</div>

				</div>
			</div>
		</section>
		<section class="sect3 ">

			<div class="d-flex justify-content-center ">
				<div class="card ">
					<div class="row g-0">
						<div class="col-md-3 offset-md-1 position-relative ">
							<img src="{{asset('/media/exercise-2029430_640.png')}}" class="img-fluid rounded-start " alt="seniors  faisant de la marche nordique">
						</div>
						<div class="col-md-7 d-flex align-items-start mt-5 pt-5">
							<div class="card-body">
								<h3 class="card-title ">Atelier sénior</h3>
								<p class="card-text">ce que nous verrons dans cet atelier hebdomadaire :  comment travailler votre équilibre, renforcement musculaire, coordination, prévention des chutes, souplesse, cardio, relaxation, etirement, respiration,  et surtout comment adapter les exercices à votre niveau et à vos capacités.</p>
								<h6 class="card-subtitle mb-2 text-muted">15€/cours</h6>
								<a href="{{path('app_paiement_index')}}" class="btn btn-primary">acheter maintenant</a>


							</div>
						</div>
					</div>
				</div>

			</div>

			
		</section>


		{% include "frag/modalCookie.html.twig" %}
	</main>

	{% block footer %}
		{% include 'frag/footer.html.twig' %}
	{% endblock %}
{% endblock %}
