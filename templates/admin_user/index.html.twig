{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	{% block navBar %}
		{{ parent() }}
	{% endblock %}
	{% block content %}
		<div class="ctn-form">
			<h1>User index</h1>

			<table class="table table-striped table-bordered table-hover table-sm">
				<thead>
					<tr>
						<th>Id</th>
						<th>FirstName</th>
						<th>LastName</th>
						{# <th>Address</th>
						<th>City</th>
						<th>Zip</th>
						<th>Country</th> #}
						<th>Phone</th>
						<th>Birthday</th>
						<th>Email</th>
						<th>Password</th> 
						{# <th>Confirm_password</th> #}
						<th>Roles</th> 
						<th>actions</th> 
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.firstName }}</td>
							<td>{{ user.lastName  }}</td>
							{# <td>{{ user.address }}</td>
							<td>{{ user.city }}</td>
							<td>{{ user.zip }}</td>
							<td>{{ user.country }}</td> #}
							
							<td>{{ user.phone }}</td>
							<td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.password }}</td> 
							{# <td>{{ user.confirmPassword }}</td> #}
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>  
								<a href="{{ path('app_admin_user_show', {'id': user.id}) }}"><button type="submit" class="btn btn-primary mb-2">show</button></a>
								<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><button type="submit" class="btn btn-warning mb-2">edit</button></a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="14">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_admin_user_new') }}"><button type="submit" class="btn btn-secondary mb-2">Create new</button></a>
		</div>
	{% endblock %}

	
{% endblock %}
