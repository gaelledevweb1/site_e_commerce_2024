{% extends 'base.html.twig' %}

{% block title %}Paiement index
{% endblock %}

{% block body %}

	
	{% block content%}
		<div class="ctn-form">
			<h1>Paiement index</h1>

			<table class="table table-striped table-bordered table-hover table-sm">
				<thead>
					<tr>
						<th>Id</th>
						<th>BankName</th>
						<th>CardName</th>
						<th>CardNumber</th>
						<th>CardNetwork</th>
						<th>CardHoldername</th>
						<th>ExpirationDate</th>
						<th>CVCCode</th>
						<th>SecurityCard</th>
						<th>Currency</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for paiement in paiements %}
						<tr>
							<td>{{ paiement.id  }}</td>
							<td>{{ paiement.bankName  }}</td>
							<td>{{ paiement.cardName  }}</td>
							<td>{{ paiement.cardNumber  }}</td>
							<td>{{ paiement.cardNetwork  }}</td>
							<td>{{ paiement.cardHoldername  }}</td>
							<td>{{ paiement.expirationDate ? paiement.expirationDate|date('Y-m-d') : ''  }}</td>
							<td>{{ paiement.CVCCode  }}</td>
							<td>{{ paiement.securityCard  }}</td>
							<td>{{ paiement.currency  }}</td>
							<td>
								<a href="{{ path('app_admin_paiement_show', {'id': paiement.id}) }}"><button type="submit" class="btn btn-primary mb-2">show</button></a>
								<a href="{{ path('app_admin_paiement_edit', {'id': paiement.id}) }}"><button type="submit" class="btn btn-warning mb-2">edit</button></a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="11">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_admin_paiement_new') }}"><button type="submit" class="btn btn-secondary mb-2">Create new</button></a>
		</div>
	{% endblock %}

	
{% endblock %}
