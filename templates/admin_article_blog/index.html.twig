{% extends 'base.html.twig' %}

{% block title %}ArticleBlog index
{% endblock %}

{% block body %}

	{% block navBar %}
		{{ parent() }}
	{% endblock %}
	{% block content %}
		<h1>ArticleBlog index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Contain</th>
					<th>Author</th>
					<th>DateCreation</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article_blog in article_blogs %}
					<tr>
						<td>{{ article_blog.id }}</td>
						<td>{{ article_blog.Title }}</td>
						<td>{{ article_blog.contain }}</td>
						<td>{{ article_blog.author }}</td>
						<td>{{ article_blog.dateCreation ? article_blog.dateCreation|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_admin_article_blog_show', {'id': article_blog.id}) }}">show</a>
							<a href="{{ path('app_admin_article_blog_edit', {'id': article_blog.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_article_blog_new') }}">Create new</a>
	{% endblock %}

	
{% endblock %}
