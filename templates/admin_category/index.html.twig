{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}

	
	{% block content %}
		<turbo-frame id="the_frame_id">
			<div class="ctn-form">
				<h1>Category index</h1>

				<table class="table table-striped table-bordered table-hover table-sm">
					<thead>
						<tr>
							<th>Id</th>
							<th>NameCategory</th>
							<th>CategoryImages</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.nameCategory }}</td>
								<td> {{category.CategoryImages  }}  </td>
								<td>
									<a href="{{ path('app_admin_category_show', {'id': category.id}) }}"><button type="submit" class="btn btn-primary mb-2">show</button></a>
									<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}"><button type="submit" class="btn btn-warning mb-2">edit</button></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_admin_category_new') }}"><button type="submit" class="btn btn-secondary mb-2">Create new</button></a>
			</div>
		</turbo-frame>
	{% endblock %}

	
{% endblock %}
