{% extends 'base.html.twig' %}

{% block title %}Adress index{% endblock %}

{% block body %}
    <h1>Adresses</h1>

    <h2>Adresse personnelle</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Zip</th>
                <th>Country</th>
                <th>Number</th>
                <th>Street</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                {# <td>{{ adress.id }}</td> #}
                <td>{{ adress.City }}</td>
                <td>{{ adress.Zip }}</td>
                <td>{{ adress.Country }}</td>
                <td>{{ adress.number }}</td>
                <td>{{ adress.street }}</td>
                <td>
                    <a href="{{ path('app_adress_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('app_adress_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

