{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block content %}
	<div class="ctn-form">
        <h1>User</h1>

        <table class="table table-striped table-bordered table-hover table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id  }}</td>
                </tr>
                <tr>
                    <th>FirstName</th>
                    <td>{{ user.firstName  }}</td>
                </tr>
                <tr>
                    <th>LastName</th>
                    <td>{{ user.lastName  }}</td>
                </tr>

                {% for adress in user.adress %}
                    {% for field in adressFields %}
                        <tr>
                            <th>{{ field  }}</th>
                            <td>{{ attribute(adress, field ) }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                <th>Phone</th>
                <td>{{ user.phone  }}</td>

                {# <tr>
                    <th>Birthday</th>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d') : ''  }}</td>
                </tr> #}
                <tr>
                    <th>Email</th>
                    <td>{{ user.email  }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password  }}</td>
                </tr>
                {# <tr>
                                                                        <th>Confirm_password</th>
                                                                        <td>{{ user.confirmPassword }}</td>
                                                                    </tr> #}
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : ''  }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_admin_user_index') }}">back to list</a>
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
