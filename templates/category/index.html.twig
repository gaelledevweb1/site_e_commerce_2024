	<div class="container ">

		<div class="row row-cols-1 row-cols-sm-2  	row-cols-md-3 g-3 justify-content-center">
			{# {{materniteId}}
			dump({{materniteId}}) #}
			{% for product in products %}


				<div class="col mx-5">
					<div class="card  shadow-sm mb-5 CardProduct "   >
						 <div class="ctnImg ctnImgProduct imgProduct ">
							<img class="bd-placeholder-img card-img-top " width="100%" height="225"  src="{{asset(product.articleThumbnails)}}" alt="image de {{ product.articleName }}">


						</div> 
						<div class="card-body product-card-body" style="overflow: auto;">
							<h5 class="card-title
																																																																																			">{{ product.articleName |e  }}
							</h5>
							<p class="card-text">{{ product.sellPriceHT |e }}
								€</p>
							<div class="card-text">{{ product.articleDescription |e }}</div>
							<div class="dropdown">
								<button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
									show more
								</button>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="app_products_show">
											détail:
											{{ product.details |e }}</a>
									</li>
									<li>
										<a class="dropdown-item" href="app_products_show">
											référence produit:
											{{ product.articleRef |e  }}</a>
									</li>

								</ul>
							</div>

						</div>
						<div class="card-footer template-product-btnPanier ">
							
							     <a href="{{path('app_cart_add',{'id':product.id})}}" class="btn btn-Blue">ajouter au panier</a>  
							 
							<a href="{{path('app_paiement_index')}}" class="btn btn-primary">acheter maintenant</a>
						</div>
					</div>
				</div>


			{% endfor %}
		</div>
	</div>

	
	{% block footer %}
		{% include 'frag/footer.html.twig' %}
	{% endblock %}
{% endblock %}
