{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}

	{% block navBar %}
		{{ parent() }}
	{% endblock %}
	{% block content %}
		<h1>Category index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>NameCategory</th>
					<th>CategoryImages</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.nameCategory }}</td>
						<td> <img src="{{asset(category.CategoryImages)  }}" alt=""> </td>
						<td>
							<a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
							<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_category_new') }}">Create new</a>
	{% endblock %}

	{% block footer %}
		{{ parent() }}
	{% endblock %}
{% endblock %}
