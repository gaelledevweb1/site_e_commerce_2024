	{#  je souhaite avoir les informations de l'utilisateur connecter #}
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>Informations personnelles</h2>
				<p>{{app.user.firstName |e }}</p>
				<p>{{ app.user.lastName |e }}</p>
				{# <p>{{app.user.birthday ? user.birthday|date('Y-m-d') : '' }}</p>  #}


				<p>{{ app.user.email |e }}</p>
				{# <p>{{ app.user.password |e }}</p> #}
