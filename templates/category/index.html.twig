{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}


{% block content %}

	<style>
		.CardProduct{
			height: 30rem;
		}
		.imgProduct{
			object-fit: cover;
		}
	</style>

	<h1>Category Maternité</h1>

	{# <div class="card mb-3 " style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="{{asset('media/exercise-ball.jpg')}}" class="img-fluid rounded-start" alt=" image d'une medecine ball">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">Medecine Ball</h5>
					<a class="btn btn-primary" href="{{ path('app_products_index')}}" role="button">Découvrir</a>

				</div>
			</div>
