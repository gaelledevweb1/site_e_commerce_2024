{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id  }}</td>
            </tr>
            <tr>
                <th>OrderDate</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Paid</th>
                <td>{{ order.paid ? 'Yes' : 'No'  }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status  }}</td>
            </tr>
            <tr>
                <th>Delivered</th>
                <td>{{ order.delivered ? 'Yes' : 'No'  }}</td>
            </tr>
            <tr>
                <th>DeliveryDate</th>
                <td>{{ order.deliveryDate ? order.deliveryDate|date('Y-m-d') : ''  }}</td>
            </tr>
            <tr>
                <th>DeliveryInfo</th>
                <td>{{ order.deliveryInfo  }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_order_index') }}">back to list</a>

    <a href="{{ path('app_admin_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('admin_order/_delete_form.html.twig') }}
{% endblock %}
