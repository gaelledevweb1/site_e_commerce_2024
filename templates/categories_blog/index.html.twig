{% extends 'base.html.twig' %}

{% block title %}CategoriesBlog index{% endblock %}

{% block body %}
    <h1>CategoriesBlog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameCategory</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categories_blog in categories_blogs %}
            <tr>
                <td>{{ categories_blog.id }}</td>
                <td>{{ categories_blog.nameCategory }}</td>
                <td>
                    <a href="{{ path('app_categories_blog_show', {'id': categories_blog.id}) }}">show</a>
                    <a href="{{ path('app_categories_blog_edit', {'id': categories_blog.id}) }}">edit</a>
